{
  "name": "big-ocean",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:api": "turbo run build --filter=api",
    "build:front": "turbo run build --filter=front",
    "dev": "./scripts/dev.sh",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:api": "turbo run start --filter=api",
    "start:front": "turbo run start --filter=front",
    "start:web": "turbo run start --filter=web"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
