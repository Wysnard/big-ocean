{
	"name": "big-ocean",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"build:api": "turbo run build --filter=api",
		"build:front": "turbo run build --filter=front",
		"dev": "./scripts/dev.sh",
		"lint": "turbo lint",
		"lint:fix": "biome check --write apps packages",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "simple-git-hooks",
		"start:api": "turbo run start --filter=api",
		"start:front": "turbo run start --filter=front",
		"start:web": "turbo run start --filter=web",
		"test": "turbo test",
		"test:ui": "vitest --ui",
		"test:run": "turbo test",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"test:integration": "pnpm --filter=api test:integration",
		"test:integration:watch": "pnpm --filter=api test:integration:watch",
		"docker:test:up": "docker compose -f compose.test.yaml up -d --build",
		"docker:test:down": "docker compose -f compose.test.yaml down -v --remove-orphans",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"seed:test-assessment": "tsx scripts/seed-completed-assessment.ts",
		"test:e2e": "pnpm --filter=@workspace/e2e test:e2e",
		"test:e2e:ui": "pnpm --filter=@workspace/e2e test:e2e:ui",
		"test:e2e:headed": "pnpm --filter=@workspace/e2e test:e2e:headed"
	},
	"simple-git-hooks": {
		"pre-commit": "./.githooks/pre-commit",
		"pre-push": "./.githooks/pre-push",
		"commit-msg": "./.githooks/commit-msg \"$1\""
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/node": "^25.1.0",
		"@types/pg": "^8.16.0",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"@workspace/typescript-config": "workspace:*",
		"dotenv": "^17.2.3",
		"drizzle-kit": "1.0.0-beta.15-859cf75",
		"jsdom": "^27.0.0",
		"prettier": "^3.7.4",
		"simple-git-hooks": "^2.13.1",
		"tsx": "^4.21.0",
		"turbo": "^2.6.3",
		"typescript": "5.7.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.4.1",
	"engines": {
		"node": ">=20"
	},
	"pnpm": {
		"overrides": {
			"esbuild": "0.27.2"
		},
		"peerDependencyRules": {
			"allowedVersions": {
				"drizzle-orm>@effect/sql": "^0.49.0",
				"drizzle-orm>@effect/sql-pg": "^0.50.1",
				"@effect/vitest>vitest": "^4.0.18",
				"@effect/cluster>@effect/workflow": "*",
				"@effect/workflow>@effect/rpc": "^0.73.0",
				"@effect/workflow>@effect/platform": "^0.94.2"
			}
		}
	},
	"dependencies": {
		"@effect/platform": "catalog:",
		"@effect/platform-node": "catalog:",
		"@effect/sql": "catalog:",
		"@effect/sql-pg": "catalog:",
		"bcryptjs": "catalog:",
		"better-auth": "catalog:",
		"pg": "catalog:",
		"postgres": "catalog:"
	},
	"optionalDependencies": {
		"@esbuild/linux-arm64": "*",
		"@esbuild/linux-x64": "*",
		"@rollup/rollup-linux-x64-gnu": "*"
	}
}
