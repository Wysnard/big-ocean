{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "root": false,
  "extends": ["@workspace/lint/biome"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["src/**/*"]
  },
  "overrides": [
    {
      "includes": ["**/*.gen.ts", "**/*.gen.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "correctness": {
            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
