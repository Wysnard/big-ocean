#!/bin/sh

# Pre-commit hook: Auto-fix linting issues before commit
# This ensures consistent code formatting across the codebase
# Bypass with: git commit --no-verify

echo "ðŸ”§ Running Biome auto-fix on staged files..."

# Get list of staged .ts, .tsx, .js, .jsx, .json files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(ts|tsx|js|jsx|json)$')

if [ -z "$STAGED_FILES" ]; then
  echo "No staged files to check."
  exit 0
fi

# Run biome fix on staged files
echo "$STAGED_FILES" | xargs pnpm biome check --write --unsafe

# Re-stage the fixed files
echo "$STAGED_FILES" | xargs git add

echo "âœ… Biome auto-fix complete!"
exit 0
