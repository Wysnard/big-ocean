{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"root": false,
	"extends": ["@workspace/lint/biome"],
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"linter": {
		"rules": {
			"style": {
				"noUnusedTemplateLiteral": "off"
			}
		}
	}
}
