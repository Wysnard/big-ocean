{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "root": false,
  "extends": ["@workspace/lint/biome"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["src/**/*"]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "linter": {
    "rules": {
      "style": {
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  }
}
