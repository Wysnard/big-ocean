{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "coverage",
      ".next",
      "out",
      "pnpm-lock.yaml"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 1,
    "lineWidth": 100,
    "ignore": [
      "node_modules",
      "dist",
      "build"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noConstAssign": "error",
        "noConstantCondition": "error",
        "noEmptyCharacterClassInRegex": "error",
        "noEmptyPattern": "error",
        "noGlobalObjectCalls": "error",
        "noImportAssignments": "error",
        "noInnerDeclarations": "error",
        "noInvalidConstructorSuper": "error",
        "noInvalidUseBeforeDeclaration": "error",
        "noNewSymbol": "error",
        "noNonoctalDecimalEscape": "error",
        "noPrecisionLoss": "error",
        "noSelfAssign": "error",
        "noSetterReturn": "error",
        "noStringCaseMismatch": "error",
        "noSwitchDeclarations": "error",
        "noUnnecessaryElse": "warn",
        "noUnreachable": "error",
        "noUnreachableSuper": "error",
        "noUnsafeFinally": "error",
        "noUnsafeNegationOperator": "error",
        "noUnsafeOptionalChaining": "error",
        "noUnusedLabels": "error",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "error",
        "useIsnan": "error",
        "useValidForDirection": "error",
        "useYield": "error"
      },
      "a11y": {
        "noAccessKey": "warn",
        "noAriaHiddenOnFocusable": "error",
        "noAriaRole": "error",
        "noAriaUnsupportedElementRoles": "error",
        "noAutofocus": "warn",
        "noBlankTarget": "warn",
        "noDistractingElements": "warn",
        "noHeaderScope": "error",
        "noInteractiveElementToUniversalHandler": "error",
        "noNoninteractiveElementToInteractiveRole": "error",
        "noNoninteractiveTabindex": "error",
        "noRedundantRoles": "warn",
        "noSvgWithoutTitle": "warn",
        "useAltText": "error",
        "useAriaActivedescendantWithTabindex": "error",
        "useAriaProps": "error",
        "useButtonType": "error",
        "useHeadingContent": "error",
        "useHtmlLang": "error",
        "useIframeTitle": "error",
        "useLabelForControl": "error",
        "useValidAnchor": "warn",
        "useValidAriaProps": "error",
        "useValidAriaRole": "error",
        "useValidAriaValues": "error"
      },
      "suspicious": {
        "noAssignInExpressions": "error",
        "noAsyncPromiseExecutor": "error",
        "noCatchAssign": "error",
        "noClassAssign": "error",
        "noCommentText": "error",
        "noCond Expr": "error",
        "noConsoleLog": "off",
        "noConstEnum": "error",
        "noConstructorReturn": "error",
        "noDebugger": "error",
        "noDoubleEquals": "error",
        "noDuplicateClassMembers": "error",
        "noDuplicateObjectKeys": "error",
        "noDuplicateParameters": "error",
        "noExplicitAny": "error",
        "noExtraNonNullAssertion": "error",
        "noFallthroughSwitchClause": "error",
        "noFunctionAssign": "error",
        "noGlobalAssign": "error",
        "noImplicitAnyLet": "error",
        "noImportAssignments": "error",
        "noLabelVar": "error",
        "noMisleadingCharacterClass": "error",
        "noMisleadingInstantiator": "error",
        "noNegatedAssertion": "error",
        "noPrototypeBuiltins": "error",
        "noRedeclare": "error",
        "noSelfCompare": "error",
        "noShadowRestrictedNames": "error",
        "noSpaceBetweenFunctionAndNewKeyword": "error",
        "noSwitchDeclarations": "error",
        "noThenProperty": "error",
        "noUnsafeDeclarationMerging": "error",
        "noUnsafeNegationOperator": "error",
        "noVar": "error",
        "useAwait": "error",
        "useGetterReturn": "error",
        "useIsNan": "error",
        "useNamespaceKeywordInTypeOnlyImports": "error",
        "useValidTypeof": "error"
      },
      "style": {
        "noArguments": "error",
        "noCommaOperator": "error",
        "noImplicitBoolean": "warn",
        "noInferrableTypes": "warn",
        "noNamespace": "error",
        "noNegatedCondition": "warn",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "error",
        "noParameterProperties": "error",
        "noRestrictedGlobals": "error",
        "noShoutyConstants": "warn",
        "noUnusedTemplateLiteral": "warn",
        "noVar": "error",
        "useAsConstAssertion": "warn",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "warn",
        "useConst": "warn",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useExponentiationOperator": "warn",
        "useExplicitLengthCheck": "warn",
        "useLiteralKeys": "warn",
        "useLogicalAssignment": "warn",
        "useNamingConvention": "error",
        "useNumberToFixedDigitsArgument": "error",
        "useSelfClosingElements": "error",
        "useSortedKeys": "warn",
        "useStrictMode": "error",
        "useTemplate": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2
    }
  },
  "overrides": [
    {
      "include": [
        "**/*.tsx",
        "**/*.ts"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "useExhaustiveDependencies": "error"
          }
        }
      }
    }
  ]
}
